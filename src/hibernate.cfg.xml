<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://127.0.0.1:3306/autoinc</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password"></property>
		<property name="hibernate.connection.pool_size">10</property>
		<property name="show_sql">true</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.current_session_context_class">thread</property>

		<mapping class="com.autoinc.warehouse.dao.ProductDAO" />
		<mapping class="com.autoinc.warehouse.dao.InventoryDAO" />
		<mapping class="com.autoinc.warehouse.dao.AddressDAO" />
		<mapping class="com.autoinc.warehouse.dao.CountryDAO" />
		<mapping class="com.autoinc.warehouse.dao.CustomerDAO" />
		<mapping class="com.autoinc.warehouse.dao.DeliveryOffersDAO" />
		<mapping class="com.autoinc.warehouse.dao.ProductDetailsDAO" />
		<mapping class="com.autoinc.warehouse.dao.SupplyLogisticsDAO" />
		<mapping class="com.autoinc.warehouse.dao.UserDAO" />
		<mapping class="com.autoinc.warehouse.dao.WarehouseDAO" />


	</session-factory>
</hibernate-configuration>